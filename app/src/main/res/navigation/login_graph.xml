<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.example.diplom.ui.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_splash_to_auth_reg"
            app:destination="@id/auth_reg">

            <argument
                android:name="title"
                app:argType="string" />

            <argument
                android:name="isRegistrate"
                app:argType="boolean" />
        </action>

        <deepLink
            android:id="@+id/deepLink"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            app:uri="@string/deep_link_go_to_auth_value" />
    </fragment>

    <fragment
        android:id="@+id/auth_reg"
        android:name="com.example.diplom.ui.authorizationregistration.AuthorizationRegistrationFragment"
        android:label="AuthorizationRegistration"
        tools:layout="@layout/authorization_registration_fragment">

        <argument
            android:name="title"
            app:argType="string" />

        <argument
            android:name="isRegistrate"
            app:argType="boolean" />

        <action
            android:id="@+id/action_auth_reg_to_enter_code"
            app:destination="@id/enter_code">
            <argument
                android:name="phoneTitle"
                app:argType="string" />
        </action>

    </fragment>

    <fragment
        android:id="@+id/enter_code"
        android:name="com.example.diplom.ui.entercode.EnterCodeFragment"
        tools:layout="@layout/enter_cod_fragment">
        <argument
            android:name="phoneTitle"
            app:argType="string" />

        <argument
            android:name="isRegistrate"
            app:argType="boolean" />

        <action
            android:id="@+id/action_enter_code_to_enter_name"
            app:destination="@id/enter_name" />

        <action
            android:id="@+id/enter_code_to_news_promotions_graph"
            app:destination="@id/news_promotions_graph" />
    </fragment>

    <fragment
        android:id="@+id/enter_name"
        android:name="com.example.diplom.ui.entername.EnterNameFragment"
        tools:layout="@layout/enter_name_fragment">

        <argument
            android:name="phoneTitle"
            app:argType="string" />

        <action
            android:id="@+id/enter_name_to_news_promotions_graph"
            app:destination="@id/news_promotions_graph" />
    </fragment>

    <include app:graph="@navigation/news_promotions_graph" />
</navigation>